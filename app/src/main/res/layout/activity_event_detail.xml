<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_event_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/viewParticipantsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white" />

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_arrow" />
        \

        <!-- Event Poster -->
        <ImageView
            android:id="@+id/eventPosterImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/backButton"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop" />

        <!-- Event QR Code -->
        <ImageView
            android:id="@+id/eventQRCodeImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/backButton"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:scaleType="centerInside" />

        <!-- Event Name -->
        <TextView
            android:id="@+id/eventNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventPosterImageView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="Event Name"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/eventDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventNameTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Event Description"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Event Start Date -->
        <TextView
            android:id="@+id/eventStartDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventDescriptionTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Start Date: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Event End Date -->
        <TextView
            android:id="@+id/eventEndDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventStartDateTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:text="End Date: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Event Facility -->
        <TextView
            android:id="@+id/eventFacilityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventEndDateTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:text="Location: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Event Capacity -->
        <TextView
            android:id="@+id/eventCapacityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventFacilityTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:text="Capacity: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Update Poster Button -->

        <!-- Edit Info Button -->

        <!-- Join Event Button -->

        <Button
            android:id="@+id/editInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventCapacityTextView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@id/updatePosterButton"
            android:text="Edit Info"
            android:visibility="visible" />

        <Button
            android:id="@+id/joinEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventCapacityTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="Join Event"
            android:visibility="gone" />

        <!-- Leave Event Button -->
        <Button
            android:id="@+id/leaveEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventCapacityTextView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/joinEventButton"
            android:text="Leave Event"
            android:visibility="gone" />

        <!-- Draw Button -->

        <!-- Accept Button -->

        <Button
            android:id="@+id/drawButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventCapacityTextView"
            android:layout_marginStart="136dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@id/editInfoButton"
            android:text="Draw"
            android:visibility="visible" />

        <Button
            android:id="@+id/acceptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventCapacityTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="Accept"
            android:visibility="gone" />

        <!-- Reject Button -->

        <Button
            android:id="@+id/rejectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventCapacityTextView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/acceptButton"
            android:text="Reject"
            android:visibility="gone" />

        <!-- Draw Ended TextView -->
        <TextView
            android:id="@+id/drawEndedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventCapacityTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Draw Ended"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>
</ScrollView>