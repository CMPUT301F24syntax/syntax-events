<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Back Button in the Top Right Corner -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backButton"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Event Poster Image -->
            <ImageView
                android:id="@+id/eventPosterImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:contentDescription="Event Poster" />

            <!-- QR Code Image -->
            <ImageView
                android:id="@+id/eventQRCodeImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:contentDescription="Event QR Code" />

            <!-- Update Poster Button -->
            <Button
                android:id="@+id/updatePosterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Update Poster"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <!-- Join Event Button -->
            <Button
                android:id="@+id/joinEventButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Join Event"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Delete Event Button -->
            <Button
                android:id="@+id/leaveEventButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Delete Event"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone" /> <!-- Initially hidden -->

            <!-- Event Name -->
            <TextView
                android:id="@+id/eventNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black" />

            <!-- Event Description -->
            <TextView
                android:id="@+id/eventDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Description"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/black" />

            <!-- Start Date -->
            <TextView
                android:id="@+id/eventStartDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date: YYYY-MM-DD HH:MM"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black" />

            <!-- End Date -->
            <TextView
                android:id="@+id/eventEndDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date: YYYY-MM-DD HH:MM"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black" />

            <!-- Facility/Location -->
            <TextView
                android:id="@+id/eventFacilityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Facility Name"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black" />

            <!-- Capacity -->
            <TextView
                android:id="@+id/eventCapacityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity: 100"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/black" />

            <!-- Edit Information Button -->
            <Button
                android:id="@+id/editInfoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Edit Information"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>